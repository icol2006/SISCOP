@model IEnumerable<SISCOP.Models.Tarea>

@{
    ViewBag.Title = "Index";
}

<h2>Listado Tareas</h2>
<div style="padding-right: 30px;padding-bottom:20px">
    <input type="text" style="float:right; display:inline-block">
    <label style="float: right; display: inline-block;">Buscar   &nbsp;&nbsp;</label>
</div>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_tarea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prioridad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_etapa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_tarea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_final)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prioridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_etapa)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.id_tarea }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_tarea }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_tarea })
            </td>
        </tr>
    }

</table>
